source "https://rubygems.org"

# required for sinatra web framework
gem "sinatra", require: "sinatra/base"

# required for running passenger application server
gem "passenger", ">= 5.0.25", require: "phusion_passenger/rack_handler"

# required for authentication
gem "oauth", require: "oauth/request_proxy/rack_request"


# required for parsing JSON data to Ruby hash
gem "json"